<div class="col-md-2">

</div>
<div class="col-md-8">
	<form name='conn'>
	<div class="panel panel-default">
	  <!-- Default panel contents -->
	  <div class="panel-heading">Front-end Connections</div>
		<div class="panel-body">
	  		<table class="table">
		    <tr>
		    	<td>Name</td>
			  	<td>Address</td>
			  	<td>SSL</td>
			  	<td>Active</td>
		    </tr>
		  	<% @fe_connections.each do |c| %>
		  	<tr name='connection' conn_id="<%=c.id%>">
		  		<td><input type="text" class="form-control" name="name" value="<%= c.name%>" readonly></td>
			  	<td><input type="text" class="form-control" name="address" value="<%= c.address%>" readonly></td>
			  	<td><input type="checkbox" class="form-control" name="ssl" <% if c.ssl%>checked<%end%> disabled ></td>
			  	<td><input type="checkbox" class="form-control" name="active" <% if c.active%>checked<%end%> disabled ></td>
			  	<td><button type="button" name='testcon' class="btn btn-info" conn_id ="<%=c.id%>">Test</button></td>
		  	</tr>
		  	<% end %>
		  </table>
		</div>
	</div>
	</form>
	<form name='conn2'>
	<div class="panel panel-default">
	  <div class="panel-heading">Back-end Connections</div>
		<div class="panel-body">
	  		<table class="table">
		    <tr>
		    	<td>Name</td>
			  	<td>Address</td>
			  	<td>SSL</td>
			  	<td>Active</td>
		    </tr>
		  	<% @be_connections.each do |c| %>
		  	<tr name='be-connection' conn_id="<%=c.id%>">
		  		<td><input type="text" class="form-control" name="name" value="<%= c.name%>" readonly></td>
			  	<td><input type="text" class="form-control" name="address" value="<%= c.address%>" readonly></td>
			  	<td><input type="checkbox" class="form-control" name="ssl" <% if c.ssl%>checked<%end%> disabled ></td>
			  	<td><input type="checkbox" class="form-control" name="active" <% if c.active%>checked<%end%> disabled ></td>
			  	<td><button type="button" name='testcon' class="btn btn-info" conn_id ="<%=c.id%>">Test</button></td>
		  	</tr>
		  	<% end %>
		  </table>
		</div>
	</div>
	</form>
</div>
<div class="col-md-2">
	<div class="panel panel-default">
	  	<div class="panel-heading">Test results</div>
		<div class="panel-body" id="conn_test">If you make changes in connection settings, please save the new settings prior to testing it.</div>
		<div id='loader' style='cdisplay:none; text-align:center;'><p><%= image_tag 'gears.gif' %></p></div>
	</div>
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="btn-group" role="group" aria-label="...">
				<!--button type="button" name='con' class="btn btn-success">New</button-->
	  			<button type="button" name='con' class="btn btn-success">Unlock</button>
	  			<button type="button" name='con' class="btn btn-primary" disabled>Save</button>
	  			<button type="button" name='con' class="btn btn-info">Cancel</button>
			</div>			
		</div>
	</div>	
</div>
</div>

